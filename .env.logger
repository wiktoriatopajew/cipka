# Logger Configuration
# Set to 'true' to enable specific log categories, 'false' to disable
# Leave empty to use default behavior based on NODE_ENV

# Session logs (authentication, session management) - can be very frequent
ENABLE_SESSION_LOGS=false

# API request/response logs - moderate frequency
ENABLE_API_LOGS=true

# SQL query logs - can be very frequent in active systems
ENABLE_SQL_LOGS=false

# Admin logs (login attempts, admin actions) - usually important
ENABLE_ADMIN_LOGS=true

# Live data polling logs - very frequent, usually not needed
ENABLE_LIVE_DATA_LOGS=false

# Payment processing logs - important for debugging transactions
ENABLE_PAYMENT_LOGS=true

# Log level: 'silent', 'error', 'warn', 'info', 'debug'
LOG_LEVEL=warn